# Environment Configuration
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/kleara_clinic

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_very_secure
JWT_EXPIRE=7d

# LINE API Configuration
# Get from: https://developers.line.biz/console/
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token
LINE_CHANNEL_SECRET=your_line_channel_secret
LINE_NOTIFY_TOKEN=your_line_notify_token

# Payment Gateway - Omise (Thai Payment Gateway)
# Get from: https://dashboard.omise.co/
OMISE_PUBLIC_KEY=pkey_test_xxxxxxxxxxxxx
OMISE_SECRET_KEY=skey_test_xxxxxxxxxxxxx

# Payment Gateway - 2C2P (Alternative)
# Get from: https://merchant.2c2p.com/
PAYMENT_2C2P_MERCHANT_ID=your_merchant_id
PAYMENT_2C2P_SECRET_KEY=your_secret_key

# PromptPay Configuration
# Use your Tax ID (13 digits) or Phone number (10 digits)
PROMPTPAY_ID=0123456789

# SMS Gateway - ThaiSMS
# Get from: https://www.thsms.com/
THAISMS_API_KEY=your_thaisms_api_key
THAISMS_SECRET_KEY=your_thaisms_secret_key

# SMS Gateway - SMSLinkThai (Alternative)
# Get from: https://www.smslink.co.th/
SMSLINK_USERNAME=your_smslink_username
SMSLINK_PASSWORD=your_smslink_password

# SMS Gateway - Twilio (International)
# Get from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Cloud Storage - AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=kleara-clinic-storage

# Cloud Storage - Google Cloud Storage (Alternative)
GCS_PROJECT_ID=your_gcs_project_id
GCS_BUCKET=kleara-clinic-storage
GCS_KEY_FILE=./path/to/keyfile.json

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Features Toggle
ENABLE_ONLINE_BOOKING=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_LINE_NOTIFICATIONS=true
ENABLE_PAYMENT_GATEWAY=true