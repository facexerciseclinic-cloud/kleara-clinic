# Example Environment Variables for Production
# คัดลอกไปใส่ใน Vercel Environment Variables

# ===========================================
# DATABASE
# ===========================================
MONGODB_URI=mongodb+srv://username:password@cluster.xxxxx.mongodb.net/kleara_clinic?retryWrites=true&w=majority

# ===========================================
# AUTHENTICATION
# ===========================================
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production_xyz123456789

# ===========================================
# SERVER
# ===========================================
NODE_ENV=production
PORT=5002
FRONTEND_URL=https://your-frontend-app.vercel.app

# ===========================================
# LINE API (Optional)
# ===========================================
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token_here
LINE_CHANNEL_SECRET=your_line_channel_secret_here

# ===========================================
# PAYMENT GATEWAY - GBPrimePay (Optional)
# ===========================================
GBPRIMEPAY_PUBLIC_KEY=your_gbprimepay_public_key_here
GBPRIMEPAY_SECRET_KEY=your_gbprimepay_secret_key_here
GBPRIMEPAY_MERCHANT_ID=your_merchant_id_here
GBPRIMEPAY_API_URL=https://api.gbprimepay.com/v3

# ===========================================
# SMS API - ThaisBulkSMS (Optional)
# ===========================================
SMS_API_KEY=your_sms_api_key_here
SMS_API_SECRET=your_sms_api_secret_here
SMS_API_URL=https://portal-otp.smsmkt.com/api

# ===========================================
# CLOUD STORAGE (Optional)
# ===========================================
STORAGE_PROVIDER=local

# AWS S3 (ถ้าใช้)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=kleara-clinic-files

# Google Cloud Storage (ถ้าใช้)
GCS_PROJECT_ID=your_gcs_project_id
GCS_BUCKET=kleara-clinic-files
GCS_KEYFILE_PATH=./path/to/keyfile.json

# ===========================================
# EMAIL (Optional - สำหรับอนาคต)
# ===========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_app_password
EMAIL_FROM=Kleara Clinic <noreply@kleara.clinic>

# ===========================================
# MONITORING (Optional)
# ===========================================
SENTRY_DSN=your_sentry_dsn_here
